{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "types": ["vite/client"],
        "declaration": true
    },
    "include": [
        "src/components/**/*.ts",
        "src/components/**/*.tsx",
        "stories/**/*.ts",
        "stories/**/*.tsx",
        "stories/types/*.d.ts"
    ],
    "exclude": [
        ".storybook"
    ]
}
